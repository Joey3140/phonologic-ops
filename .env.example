# ===========================================
# Phonologic Ops Hub - Environment Variables
# ===========================================

# Anthropic Claude 3.5 Sonnet (The Brain)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud (matches main PhonoLogic app)
GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account",...}

# ----------------------------------------
# Google OAuth SSO (@phonologic.ca only)
# ----------------------------------------
# Create at: https://console.cloud.google.com/apis/credentials
# Application type: Web application
# Authorized redirect URIs:
#   - https://ops.phonologic.cloud/api/auth/google?action=callback
#   - http://localhost:3000/api/auth/google?action=callback (local dev)
GOOGLE_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret

# Session secret (generate random 32+ char string)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_a_random_32_char_string_here

# ClickUp API
CLICKUP_API_TOKEN=pk_your_clickup_api_token_here

# GitHub (optional, for team sync)
GITHUB_TOKEN=ghp_your_github_token_here

# Upstash Redis (matches main PhonoLogic app)
# Used for rate limiting and CSRF state
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# Vercel Environment
VERCEL_ENV=development
